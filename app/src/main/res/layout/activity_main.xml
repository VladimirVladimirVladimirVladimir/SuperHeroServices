<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:fillViewport="true"


    >
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <TextView
            android:id="@+id/superHero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Super Hero Services!"
            android:textSize="32sp"
            android:background="#000000"
            android:textColor="#e68a00"
            />

        <ImageView
            android:id="@+id/teenGohanPic"
            android:src="@drawable/teen_gohan_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/superHero"
            android:layout_alignParentLeft="true"
            tools:ignore="ContentDescription" />



        <TextView
            android:id="@+id/gohanText"
            android:text="My name is Gohan and I am here to save the world!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/teenGohanPic"
            android:textSize="15sp"
            android:background="#000066"
            android:textColor="#e68a00"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_above="@id/gohanText"
            android:layout_toRightOf="@id/teenGohanPic"
            android:text="      Son of the famous Saiyan Goku, Gohan finally got his merit when he defeated the Super Villan Cell. Gohan used various tacticts to accomplish this task, and in doing so secured his postion as a member in SuperHero Services."
            />

        <TextView
            android:id="@+id/paragraph_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="          Is the world in need of saving? Are you up against a monstorous being who shows no mercy? If so Gohan is the super hero for you! Fully loaded with awesome Saiyan power and backed by the famous Z fighters. There is no enemy that you won't be able to win against."
            android:layout_below="@id/gohanText"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/more_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paragraph_text"
            android:layout_alignParentRight="true"
            android:text="For more information please call:"
            android:textSize="18sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/more_info"
            android:layout_alignParentRight="true"
            android:text="305-345-6475"
            android:textSize="22sp"
            />




        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/superHero"
            android:layout_toRightOf="@id/teenGohanPic"
            android:text="Name: Gohan"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/teenGohanPic"
            android:layout_below="@id/name"
            android:text="Weight: 115 pounds"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/teenGohanPic"
            android:layout_below="@id/weight"
            android:text="Height: 5'5"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/race"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/height"
            android:layout_toRightOf="@id/teenGohanPic"
            android:text="Race: Saiyan"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/kamehameha"
            android:src="@drawable/kamehameha"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#000000"
            />

        <ImageView
            android:id="@+id/cellPunch"
            android:src="@drawable/cell_punch"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/kamehameha"
            android:background="#000000"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/gohan_hair"
            android:src="@drawable/gohan_hair"
            android:layout_toRightOf="@id/cellPunch"
            android:layout_alignParentBottom="true"
            android:background="#000000"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/black_gohan"
            android:id="@+id/black_gohan"
            android:paddingTop="40dp"
            android:background="#000000"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/gohan_hair"
            android:layout_toEndOf="@+id/gohan_hair" />

        <ImageView
            android:id="@+id/black_dbz"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/more_info"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-4dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="104dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="-74dp"
            android:layout_toEndOf="@+id/gohan_hair"
            android:layout_toRightOf="@+id/gohan_hair"
            android:src="@drawable/black_dbz" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:layout_above="@id/black_dbz"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="We are not responsible for any destruction..."
            android:textSize="4sp"
            android:background="#000000"
            android:textColor="#F5F5F5"
            />

    </RelativeLayout>
</ScrollView>
